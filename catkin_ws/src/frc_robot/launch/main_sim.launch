<launch>

  <arg name="auton"             default="false" />
  <arg name="sim" 		default="true" />
  <arg name="slam"              default="false" />
  <arg name="teleop"            default="true" />
  <arg name="visualize"         default="true" />

  <param name="use_sim_time" type="bool" value="true"/>
  
  <include if="$(arg auton)" 		file="$(find frc_robot)/launch/auton.launch"/>
  <include if="$(arg sim)"		file="$(find frc_robot)/launch/sim.launch"/>
  <include if="$(arg slam)" 		file="$(find frc_robot)/launch/slam_sim.launch"/>
  <include if="$(arg teleop)"		file="$(find frc_robot)/launch/teleop.launch"/>
  <include if="$(arg visualize)"	file="$(find frc_robot)/launch/visualize_sim.launch"/>
  
</launch>
