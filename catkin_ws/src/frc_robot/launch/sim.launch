<launch>
  <arg name="model" default="$(find frc_robot)/urdf/00-default.urdf.xacro"/>
  <arg name="auton" default="true" />
  <arg name="teleop" default="true" />
  
  
  <include file="$(find frc_robot)/launch/gazebo.launch">
    <arg name="model" value="$(arg model)" />
  </include>
  
  <include file="$(find frc_robot)/launch/visualize.launch"/>
  
  <rosparam command="load"
            file="$(find frc_robot)/config/diffdrive.yaml"
            ns="frc_diff_drive_controller" />

  <rosparam command="load"
            file="$(find frc_robot)/config/joints.yaml"
            ns="frc_joint_state_controller" />

    <!-- args=" frc_elevator_controller -->
  <node name="frc_controller_spawner" pkg="controller_manager" type="spawner"
    args="frc_diff_drive_controller
    frc_joint_state_controller"/>
  
  <node if="$(arg teleop)" name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
    <param name="default_topic" value="/frc_diff_drive_controller/cmd_vel"/>
  </node>
  
</launch>
