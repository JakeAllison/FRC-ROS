<launch>
  <arg name="slider" default="true" />
  <arg name="keyboard" default="false" />
  <arg name="xbox" default="true" />
  
  
  
  <node if="$(arg slider)" name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
    <param name="default_topic" value="/frc_diff_drive_controller/cmd_vel"/>
  </node>
  
  <node if="$(arg keyboard)" name="teleop_twist_keyboard" pkg="teleop_twist_keyboard" type="teleop_twist_keyboard">
    <remap from="cmd_vel" to="/frc_diff_drive_controller/cmd_vel"/>
  </node>
  
  <node if="$(arg xbox)" name="joy_driver" pkg="joy" type="joy_node">
    <param name="autorepeat_rate" value="10.0"/>
  </node>
  
  <node if="$(arg xbox)" name="teleop_twist_joy" pkg="teleop_twist_joy" type="teleop_node">
    <remap from="cmd_vel" to="/frc_diff_drive_controller/cmd_vel"/>
    <param name="enable_button" value="0"/>
    <param name="enable_turbo_button" value="1"/>
    <param name="scale_linear" value="1.0"/>
    <param name="scale_linear_turbo" value="4.0"/>
    <param name="scale_angular" value="3.0"/>
  </node>
  
</launch>
